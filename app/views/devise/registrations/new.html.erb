<div class="container", style="padding-top: 30px" >
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, placeholder: "IbraBossPSG" %>
    </div>

    <div>
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, placeholder: "James" %>
    </div>

    <div>
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, placeholder: "Rodriguez" %>
    </div>

    <div>
      <%= f.label :phone_number %><em>(10-digit only, no formatting, no '+1'. Only the good stuff.) </em><br />
      <%= f.text_field :phone_number, autofocus: true, placeholder: "1237894567" %>
    </div>

    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "ronaldosuckz@barca.com" %>
    </div>

    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div>
      <%= f.submit "Sign up" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
